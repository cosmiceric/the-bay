{#
 # Homepage Template
 # By default, the homepage just diplays the most recent article.
 #}

{% extends "_layout" %}

{# Get that latest article content #}
{% set entry = craft.entries.section('articles').first() %}

{# Set the title to the latest article title #}
{% set title = entry.title %}

{# Set the featured background image to the _layout template #}
{% set mainBackground = entry.featuredImage.first.url %}

{% block content %}

	{# Get the article rendering partial #}
  {% include '_partials/article.twig' %}

{% endblock %}